<!-- Sakai Sidebar Navigation -->
<div class="sakai-sidebar">
    <div class="sakai-sidebar-header">
        <img src="logo-nav.png" alt="Logo" class="sakai-logo">
        <div class="sakai-sidebar-title">Queimadas</div>
        <div class="sakai-sidebar-subtitle">Informações e Prevenção</div>
    </div>
    
    <nav class="sakai-nav">
        <a href="/" class="sakai-nav-item <%= path === '/' ? 'active' : '' %>">
            <i class="bi bi-house-door"></i>
            Início
        </a>
        <a href="/secas" class="sakai-nav-item <%= path === '/secas' ? 'active' : '' %>">
            <i class="bi bi-droplet"></i>
            Secas
        </a>
        <a href="/queimadas" class="sakai-nav-item <%= path === '/queimadas' ? 'active' : '' %>">
            <i class="bi bi-fire"></i>
            Queimadas
        </a>
        <a href="/Prevencao" class="sakai-nav-item <%= path === '/Prevencao' ? 'active' : '' %>">
            <i class="bi bi-shield-check"></i>
            Como Prevenir
        </a>
        <a href="/Referencias" class="sakai-nav-item <%= path === '/Referencias' ? 'active' : '' %>">
            <i class="bi bi-book"></i>
            Referências
        </a>
        <a href="/QuemSomos" class="sakai-nav-item <%= path === '/QuemSomos' ? 'active' : '' %>">
            <i class="bi bi-people"></i>
            Quem Somos
        </a>
    </nav>
</div>

<!-- Mobile Menu Toggle -->
<div class="d-md-none position-fixed top-0 start-0 p-3" style="z-index: 1001;">
    <button class="btn btn-outline-light" onclick="toggleSidebar()">
        <i class="bi bi-list"></i>
    </button>
</div>

<script>
function toggleSidebar() {
    const sidebar = document.querySelector('.sakai-sidebar');
    sidebar.classList.toggle('open');
}
</script>